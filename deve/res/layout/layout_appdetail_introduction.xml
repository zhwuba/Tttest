<?xml version="1.0" encoding="utf-8"?>
<com.market.view.scroll.AppScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/introduction_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="none"
    android:gravity="top"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/particular_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/particular_app_detail_header_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/particular_app_detail_header_top_bottom"
            android:paddingTop="@dimen/app_detail_layout_padding" >

            <ImageView
                android:id="@+id/particular_info_appicon"
                android:layout_width="@dimen/common_app_icon_size"
                android:layout_height="@dimen/common_app_icon_size"
                android:layout_marginBottom="@dimen/app_detail_appicon_margin_bottom"
                android:layout_marginLeft="@dimen/app_detail_image_margin_left"
                android:layout_marginRight="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/picture_bg1_big" >
            </ImageView>

            <LinearLayout
                android:id="@+id/app_detail_info_corner_layout"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/particular_info_appicon"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/app_detail_name_margin_top"
                android:layout_height="wrap_content" >

                <TextView
                android:id="@+id/particular_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/app_detail_name_max_width"
                android:singleLine="true"
                android:text="@string/app_detail_title"
                android:textColor="@color/detail_show_right_text"
                android:textSize="@dimen/title_name_text_size" />
                
                <ImageView
                    android:id="@+id/app_detail_info_official"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_detail_corner_left_margin"
                    android:src="@drawable/official"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/app_detail_info_corner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_detail_corner_left_margin"
                    android:visibility="gone"  />
            </LinearLayout>

            <TextView
                android:id="@+id/particular_down_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_detail_info_corner_layout"
                android:layout_marginTop="@dimen/app_detail_downnum_margin_top"
                android:layout_toRightOf="@id/particular_info_appicon"
                android:singleLine="true"
                android:textColor="@color/detail_show_left_text"
                android:textSize="@dimen/app_detail_downnum_size" />

            <RatingBar
                android:id="@+id/particular_star"
                style="@style/App_RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/particular_down_times"
                android:layout_marginTop="@dimen/app_detail_downnum_margin_bottom"
                android:layout_toRightOf="@id/particular_info_appicon"
                android:isIndicator="true"
                android:numStars="5" />

            <TextView
                android:id="@+id/particular_info_size"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_detail_info_corner_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/app_detail_downnum_margin_top"
                android:layout_toRightOf="@+id/particular_down_times"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/detail_show_left_text"
                android:textSize="@dimen/app_detail_downnum_size" >
            </TextView>

            <TextView
                android:id="@+id/particular_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/particular_info_appicon"
                android:layout_marginLeft="@dimen/app_detail_appicon_margin_left"
                android:drawableLeft="@drawable/mark_check"
                android:gravity="center_vertical"
                android:textColor="@color/detail_security_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/particular_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/particular_info_appicon"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/particular_security"
                android:drawableLeft="@drawable/mark_charge"
                android:gravity="center_vertical"
                android:textColor="@color/detail_security_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/particular_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/particular_info_appicon"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/particular_charge"
                android:drawableLeft="@drawable/mark_ad"
                android:gravity="center_vertical"
                android:textColor="@color/detail_security_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <com.market.view.MyHScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <!-- 嵌套layout ：无图模式居中 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/particular_info_detail_pic_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:splitMotionEvents="false" >
                </LinearLayout>
            </LinearLayout>
        </com.market.view.MyHScrollView>

        <LinearLayout
            android:id="@+id/newC_frame"
            style="@style/padding5"
            android:layout_marginTop="6dp"
            android:orientation="vertical" >

            <com.market.view.DetailWebView
                android:id="@+id/appdetail_campaign_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:scrollbars="none" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/introduction"
                android:textColor="@color/detail_show_left_text"
                android:textSize="@dimen/app_detail_introduce_text" />

            <TextView
                android:id="@+id/particular_info_introduce"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/detail_app_introduce_text"
                android:textSize="@dimen/app_detail_introduce_text" />

            <ImageView
                android:id="@+id/moreImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="9dp"
                android:duplicateParentState="true"
                android:src="@drawable/desc_more" />

            <TextView
                android:id="@+id/app_detail_version_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_detail_versioninfo_margin_top"
                android:text="@string/app_detail_version_info"
                android:textColor="@color/detail_show_left_text"
                android:textSize="@dimen/app_detail_introduce_text" />

            <TextView
                android:id="@+id/introduce_updatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/detail_app_introduce_text"
                android:textSize="@dimen/app_detail_introduce_text" />

            <TextView
                android:id="@+id/introduce_info_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/detail_app_introduce_text"
                android:textSize="@dimen/app_detail_introduce_text" />

            <TextView
                android:id="@+id/introduce_info_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25.5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/detail_app_introduce_text"
                android:textSize="@dimen/app_detail_introduce_text" />

            <TextView
                android:id="@+id/other_people_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_people_see"
                android:textColor="@color/detail_show_left_text"
                android:textSize="@dimen/app_detail_introduce_text"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/app_recommend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:visibility="gone" >
            </LinearLayout>

            <TextView
                android:id="@+id/all_people_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19.5dp"
                android:text="@string/all_people_like"
                android:textColor="@color/detail_show_left_text"
                android:textSize="@dimen/app_detail_introduce_text"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/app_like"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:visibility="gone" >
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.market.view.scroll.AppScrollView>

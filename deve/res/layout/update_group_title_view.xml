<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/update_group_title_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip40"
	    android:gravity="center_vertical"
        android:textColor="@color/download_manage_text"
        android:textSize="@dimen/small_title_name_size" />
    
    
    <TextView
        android:id="@+id/update_group_title_update"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip40"
	    android:gravity="center_vertical"
        android:textColor="@color/common_app_install_color"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/small_title_name_size"
        android:text="@string/auto_up_title"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/update_group_title_ignore"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip40"
   		android:layout_alignParentRight="true"
	    android:gravity="center_vertical"
        android:textColor="@color/download_manage_text"
        android:textSize="@dimen/small_title_name_size"
        android:visibility="gone" />  
          
</RelativeLayout>
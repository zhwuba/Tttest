<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personalinfo_dialog_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dialog_warn" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_image"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:text="@string/toast_exit_message2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/showMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text"
            android:layout_marginTop="5dp"
            android:textSize="13.6sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/dialog_content_color" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/personalinfo_dialog_btn_bg"
            android:text="@string/dialog_cancel"
            android:textColor="@color/personalinfo_tip_color"
            android:textSize="15sp" />

        <View
            android:layout_width="@dimen/common_divider_height"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line" />

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/personalinfo_dialog_btn_bg"
            android:text="@string/dialog_ok"
            android:textColor="@color/common_green_color"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
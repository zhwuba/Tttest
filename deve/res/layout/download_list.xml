<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/onecolview_item_icon_margin"
   		android:layout_marginTop="@dimen/onecolview_item_icon_margin"
   		android:layout_marginRight="@dimen/onecolview_item_name_margin_left"
	    android:gravity="center"
	    android:orientation="horizontal" >
	
	    <ImageView
	        android:id="@+id/list_iv1"
	        android:layout_width="@dimen/common_app_icon_size"
	        android:layout_height="@dimen/common_app_icon_size">
	    </ImageView>
	
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/app_desc_top_margin"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/list_tv1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:textColor="@color/app_name_color"
         		android:textSize="@dimen/app_list_name_size" >
	        </TextView>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="2dp"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/list_downloaded_size"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#52a401"
	                android:singleLine="true"
        			android:textSize="@dimen/common_app_gray_text_size" />
	            
	            <TextView
                    android:id="@+id/list_total_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_desc_color"
                    android:singleLine="true"
                    android:textSize="@dimen/common_app_gray_text_size" />

	            <TextView
	                android:id="@+id/list_download_speed"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:singleLine="true"
	                android:gravity="right"
	                android:textColor="@color/app_desc_color"
	                android:textSize="@dimen/common_app_gray_text_size" />

	        </LinearLayout>
	
	        <ProgressBar
	            android:id="@+id/progressbar_id"
	            style="?android:attr/progressBarStyleHorizontal"
	            android:layout_width="match_parent"
	            android:layout_height="4dp"
	            android:indeterminate="false"
	            android:max="100"
	            android:progressDrawable="@drawable/probarstyle" >
	        </ProgressBar>
	    </LinearLayout>

	    <TextView
	        style="@style/common_install_btn_style"
	        android:id="@+id/list_download_bt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/app_desc_top_margin"
	        android:background="@drawable/common_installing_btn"
	        android:gravity="center"
	        android:text="@string/pause"
	        android:textColor="@color/common_app_installing_color" />
	
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/list_download_hide"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dip"
        android:visibility="gone"
        android:orientation="horizontal"  >

		<TextView
		    android:id="@+id/list_download_hide_del"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="@dimen/common_app_gray_text_size"
		    android:textColor="@color/common_func_color"
		    android:text="@string/download_item_delete"
		    android:background="#00000000"
		    android:drawableLeft="@drawable/common_del"
		    android:drawablePadding="5dip" />

		<TextView
		    android:id="@+id/list_download_hide_detail"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="@dimen/dm_hide_btns_distance"
		    android:textSize="@dimen/common_app_gray_text_size"
		    android:textColor="@color/common_func_color"
		    android:text="@string/download_item_detail"
		    android:background="#00000000"
		    android:drawableLeft="@drawable/common_detail"
		    android:drawablePadding="5dip" />

	</LinearLayout>
	
	<ImageView 
	    android:id="@+id/list_download_hide_bar"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_gravity="center"
        android:background="@drawable/desc_more"
        android:orientation="horizontal"/>
	
	<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_list_divider_margin"
        android:background="@color/common_bg">
    </View>
</LinearLayout>
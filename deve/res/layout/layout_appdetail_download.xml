<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/particular_info_layout_download"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/detail_download_bg"
    android:orientation="horizontal" >

      <ImageView
        android:id="@+id/particular_info_detail_cancal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="18dip"
        android:src="@drawable/icon_cancle_selector" >
    </ImageView>
    

    <LinearLayout
        android:id="@+id/progress_speed"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/particular_bottom_bar_height"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="4.5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_current_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:textColor="#52a401"
                    android:textSize="@dimen/common_app_gray_text_size" />

                <TextView
                    android:id="@+id/detail_total_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/app_desc_color"
                    android:textSize="@dimen/common_app_gray_text_size" />

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_app_gray_text_size" />
            
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar_id"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_marginTop="2dip"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/probarstyle" >
        </ProgressBar>
    </LinearLayout>

  	 <ImageView
        android:id="@+id/particular_info_detail_down_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginRight="18dp"
        android:src="@drawable/icon_stop_selector" >
    </ImageView>
</LinearLayout>
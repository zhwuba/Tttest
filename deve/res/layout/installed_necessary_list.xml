<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="3.0" >

    <include
        android:id="@+id/left_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_special_btns_padding_left"
        android:layout_weight="1.0"
        layout="@layout/layout_app_vertical" />

    <include
        android:id="@+id/middle_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        layout="@layout/layout_app_vertical" />

    <include
        android:id="@+id/right_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/home_special_btns_padding_left"
        android:layout_weight="1.0"
        layout="@layout/layout_app_vertical" />

</LinearLayout>
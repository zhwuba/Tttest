<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@drawable/personalinfo_dialog_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp" >

        <RelativeLayout
            android:id="@+id/ll_inputNickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/personalinfo_relative_height"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/account_input_bg"
            android:orientation="horizontal"
            android:visibility="gone" >

            <EditText
                android:id="@+id/edit_nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/delete_nickname"
                android:background="@null"
                android:longClickable="false"
                android:textSize="@dimen/account_content_text_size"
                android:textColor="@color/common_text_color"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/delete_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/image_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/text_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/personalInfo_logout_tip"
                android:textColor="@color/dialog_content_color"
                android:textSize="@dimen/personalinfo_dialog_text_size"
                android:visibility="gone"
                 />

            <TextView
                android:id="@+id/exit_withimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/toast_exit_message2"
                android:layout_below="@id/text_logout"
                android:textColor="@color/dialog_content_color"
                android:visibility="gone"
                />
        </RelativeLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/personalinfo_dialog_item_height" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_btn_left_bg"
            android:text="@string/dialog_cancel"
            android:textColor="@color/personalinfo_tip_color" 
            android:textSize="@dimen/personalinfo_dialog_text_size"/>

        <View
            android:layout_width="@dimen/common_divider_height"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_btn_right_bg"
            android:text="@string/dialog_ok"
            android:textColor="@color/common_green_color" 
            android:textSize="@dimen/personalinfo_dialog_text_size"/>
    </LinearLayout>

</LinearLayout>
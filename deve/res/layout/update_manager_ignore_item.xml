<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/ignore_layout"
    android:background="@drawable/common_item_bg" >

    <ImageView
        android:id="@+id/ignore_app_image"
        android:layout_width="@dimen/common_app_icon_size"
        android:layout_height="@dimen/common_app_icon_size"
        android:layout_marginLeft="@dimen/app_list_common_margin"
   		android:layout_marginTop="@dimen/app_list_common_margin"
        android:src="@drawable/picture_bg1_big" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/ignore_app_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_list_common_margin"
        android:layout_toRightOf="@id/ignore_app_image"
        android:layout_toLeftOf="@+id/ignore_cancel"
        android:layout_marginLeft="@dimen/app_desc_top_margin"
        android:layout_marginRight="@dimen/app_desc_top_margin" >
        
        <TextView
            android:id="@+id/ignore_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_name_color"
	        android:textSize="@dimen/app_list_name_size" >
        </TextView>
        
        
        <TextView
            android:id="@+id/ignore_version_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ignore_app_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/app_desc_color"
        	android:textSize="@dimen/common_app_gray_text_size" >
        </TextView>

        <TextView
            android:id="@+id/ignore_list_fileSize_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ignore_version_change"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/app_desc_color"
            android:textSize="@dimen/common_app_gray_text_size" />
	        
    </RelativeLayout>
    
    
    <TextView
        style="@style/common_install_btn_style"
        android:id="@+id/ignore_cancel"
        android:layout_width="@dimen/ignore_app_btn_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/app_list_common_margin"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/update_ignore_cancel" />
    
     <com.market.view.UpdateExpandLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ignore_expand_view"
        android:layout_below="@+id/ignore_app_image"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/app_list_common_margin"
        android:layout_marginRight="@dimen/app_list_common_margin"
        >
        <TextView 
            android:id="@+id/update_content_text"
            android:layout_width="250dp"
            android:lineSpacingMultiplier="1.5"
            android:layout_height="wrap_content"
            android:textColor="@color/app_desc_color"
            android:textSize="@dimen/common_app_gray_text_size"
            android:ellipsize="end"
            />
        
       <ImageView 
            android:id="@+id/update_content_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            />
    </com.market.view.UpdateExpandLayout>
    
    <!-- <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_divider_height"
        android:layout_below="@id/ignore_expand_view"
        android:layout_marginLeft="@dimen/app_list_divider_margin"
        android:layout_marginRight="@dimen/app_list_divider_margin"
        android:background="@drawable/line"/> -->

</RelativeLayout>
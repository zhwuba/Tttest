<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >


    <ListView
        style="@style/common_scroll_style"
        android:id="@+id/category_app_list"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/common_listview_margin_top"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:dividerHeight="@dimen/onecolview_item_margin"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:clipToPadding="false"
        android:visibility="visible" >
    </ListView>
    
    <com.market.view.SearchLoadingLayout
        android:id="@+id/search_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    
    <include
        android:id="@+id/refresh_linearLayout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        layout="@layout/layout_network_ungeilivable"
        android:visibility="gone" />


</RelativeLayout>
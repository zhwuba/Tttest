<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:background="@drawable/title_search_selector" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/attach_item_normal_height"
        android:layout_marginRight="@dimen/attach_gift_LRMargin"
        android:layout_toRightOf="@id/search_icon"
        android:gravity="center_vertical" >
        
        <TextView
	        android:id="@+id/search_attem_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textColor="#484848"
	        android:maxWidth="@dimen/attach_list_name_max_size_normal"
	        android:textSize="@dimen/attach_name_normal_size" />
        
        <ImageView
	        android:id="@+id/gift_bag_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/attach_gift_LRMargin"
	        android:src="@drawable/gift_bag" />
        
        <ImageView
	        android:id="@+id/gift_integral_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/attach_gift_LRMargin"
	        android:src="@drawable/gift_integral" />
        
    </LinearLayout>
    
</RelativeLayout>

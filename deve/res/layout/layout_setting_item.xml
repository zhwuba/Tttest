<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_feedback_item_height"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/sort_bg_select" >

    <FrameLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/setting_item_text_margin_left" >

        <!-- 右侧是字串 -->
        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/setting_item_text_size" />

        <!-- 右侧是单张图片 -->
        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <!-- 右侧是单个按钮 -->
        <com.market.view.SingleButton
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 右侧是三个按钮 -->
        <com.market.view.MultiButton
            android:id="@+id/right_multi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </FrameLayout>

    <TextView
        android:id="@+id/left_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/setting_item_text_margin_left"
        android:layout_marginRight="@dimen/setting_item_text_margin_right"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/setting_item_text_size" />

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/left_name"
        android:textColor="@color/account_hint_color"
        android:textSize="@dimen/setting_item_text_tip_size" />

    <ImageView
        android:id="@+id/left_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/left_name"
        android:paddingTop="12dp"
        android:src="@drawable/setting_update_tip" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/common_bg" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_info"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:background="@drawable/setting_feedback_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical|bottom"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:src="@drawable/popup_icon_warning" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginBottom="1dip"
            android:text="title"
            android:textColor="@color/dialog_content_color"
            android:textSize="15dip" />
    </LinearLayout>

    <TextView 
        android:id="@+id/tip_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="安装"
        android:textColor="@color/dialog_content_color"
        android:paddingLeft="5dp"
        android:textSize="15dip"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:background="@drawable/line" />
    

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/personalinfo_dialog_item_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tip_dialog_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_btn_left_bg"
            android:text="@string/cancel"
            android:textSize="15dip" 
            android:textColor="@color/dialog_button_gray_color"/>
        
        <View
            android:layout_width="@dimen/common_divider_height"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line" />

        <Button
            android:id="@+id/tip_dialog_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_btn_right_bg"
            android:text="@string/dialog_ok"
            android:textColor="@color/common_green_color"
            android:textSize="15dip" />
    </LinearLayout>

</LinearLayout>
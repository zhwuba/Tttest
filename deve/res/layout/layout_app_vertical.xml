<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_bg"
    android:paddingBottom="9dp" 
    >

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="@dimen/common_app_icon_size"
        android:layout_height="@dimen/common_app_icon_size"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/list_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/home_app_name_margin_top"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:singleLine="true"
        android:textColor="@color/home_app_name_color"
        android:textSize="@dimen/app_name_text_size" />

    <TextView
        android:id="@+id/list_app_install_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/home_app_size_margin_top"
        android:textColor="@color/home_app_size_color"
        android:textSize="@dimen/common_app_gray_text_size"/>

    <TextView
        style="@style/common_install_btn_style"
        android:id="@+id/install_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_app_install_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/home_app_install_margin_top" />
    
    <ImageView
        android:id="@+id/text_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_app_install_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/home_app_install_margin_top" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/corner_icon"
        android:layout_width="@dimen/home_corner_icno_size"
        android:layout_height="@dimen/home_corner_icno_size"
        android:layout_alignLeft="@id/list_icon"
        android:layout_alignTop="@id/list_icon"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>
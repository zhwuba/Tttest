<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/download_group_title_name"
   	    android:layout_width="wrap_content"
   		android:layout_height="@dimen/dip40"
   		android:gravity="center_vertical"
   		android:textColor="@color/download_manage_text"
   		android:textSize="@dimen/small_title_name_size" />

    <TextView 
        android:id="@+id/download_group_title_num"
   	    android:layout_width="0dip"
   		android:layout_height="@dimen/dip40"
   		android:layout_weight="1"
   		android:gravity="center_vertical"
   		android:textColor="@color/download_manage_text"
   		android:textSize="@dimen/small_title_name_size"
   		android:text="（0）" />
    
    <TextView 
        android:id="@+id/download_group_title_clear"
   	    android:layout_width="80dip"
   		android:layout_height="30dip"
   		android:layout_gravity="center_vertical"
   		android:gravity="center"
   		android:textColor="@color/download_manage_text"
   		android:textSize="@dimen/small_title_name_size"
   		android:text="@string/downloaded_clear_all" />
</LinearLayout>
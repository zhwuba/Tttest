<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView  
        android:id="@+id/top_img"
        android:layout_width="@dimen/ranklist_item_img_top_width"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ranklist_item_img_top_margin"
        android:layout_height="@dimen/ranklist_item_img_top_height"
        />
    

    <TextView 
        android:id="@+id/look_all"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/discover_item_padding"
		android:textSize="@dimen/small_title_name_size"
        android:textColor="@color/discover_sub_title_color"
        android:drawableRight="@drawable/novel_arrow"
        android:drawablePadding="@dimen/discover_item_arrow_padding"
		android:text="@string/ranklist_lookall"
		android:layout_marginTop="@dimen/ranklist_item_img_title_top_margin"
        />
    
    
	<LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
	    android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:weightSum="3.0" >

        <include
            android:id="@+id/left_parent_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_special_btns_padding_left"
            android:layout_weight="1.0"
            layout="@layout/layout_app_vertical" />

        <include
            android:id="@+id/middle_parent_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            layout="@layout/layout_app_vertical" />

        <include
            android:id="@+id/right_parent_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/home_special_btns_padding_left"
            android:layout_weight="1.0"
            layout="@layout/layout_app_vertical" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_below="@id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        
        android:weightSum="3.0" >

        <include
            android:id="@+id/left_parent_layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_special_btns_padding_left"
            android:layout_weight="1.0"
            layout="@layout/layout_app_vertical" />

        <include
            android:id="@+id/middle_parent_layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            layout="@layout/layout_app_vertical" />

        <include
            android:id="@+id/right_parent_layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/home_special_btns_padding_left"
            android:layout_weight="1.0"
            layout="@layout/layout_app_vertical" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ranklist_item_divider_height"
        android:background="@color/common_bg"
        />

</RelativeLayout>
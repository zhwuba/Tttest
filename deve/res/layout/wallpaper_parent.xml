<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg" >

    <com.market.view.CommonSubtitleView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="@string/wallpaper"
        android:background="@color/common_subtitle_bg">
    </com.market.view.CommonSubtitleView>

    <com.market.view.PagerSlidingTabStrip
        android:id="@+id/common_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_heigh"
        android:background="@color/common_subtitle_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/common_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center" >
    </android.support.v4.view.ViewPager>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <Button
        android:id="@+id/one_key_install"
        android:layout_width="@dimen/necessary_one_key_width"
        android:layout_height="@dimen/necessary_one_key_height"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/necessary_one_key_margin"
        android:layout_marginTop="@dimen/necessary_one_key_margin"
        android:background="@drawable/common_install_btn"
        android:text="@string/one_key_install"
        android:textColor="@drawable/btn_base_text_color"
        android:visibility="gone" />

    <ExpandableListView
        android:id="@+id/listview_necessary"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/one_key_install"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="@dimen/onecolview_item_margin"
        android:listSelector="#00000000"
        android:scrollbars="horizontal"
        android:overScrollMode="never"
        android:visibility="gone" />

    <include
        android:id="@+id/necessary_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        layout="@layout/layout_network_ungeilivable"
        android:visibility="gone" />

    <include
        android:id="@+id/necessary_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/progress_bar_intern"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/installed_all_apps_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
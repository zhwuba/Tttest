<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_bg" >

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="@dimen/common_app_icon_size"
        android:layout_height="@dimen/common_app_icon_size"
        android:layout_marginLeft="@dimen/onecolview_item_icon_margin"
    	android:layout_marginTop="@dimen/app_list_common_margin"
    	android:layout_centerVertical="true"
        android:src="@drawable/picture_bg1_big" />

    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/app_desc_top_margin"
        android:layout_marginRight="@dimen/app_desc_top_margin"
        android:layout_toLeftOf="@+id/install_button"
        android:layout_toRightOf="@id/list_icon">

        <TextView
            android:id="@+id/list_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/app_name_color"
	        android:textSize="@dimen/app_list_name_size" />

        <TextView
            android:id="@+id/list_app_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_app_name"
            android:layout_marginTop="3dip"
            android:singleLine="true"
            android:textColor="@color/app_desc_color"
        	android:textSize="@dimen/common_app_gray_text_size" />
        
    </RelativeLayout>

    <TextView
        style="@style/common_install_btn_style"
        android:id="@+id/install_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_list_common_margin" 
        android:visibility="invisible"
        />
    
    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/favorite_edit_item_select_margin_right" 
        android:visibility="gone"/>
    

</RelativeLayout>
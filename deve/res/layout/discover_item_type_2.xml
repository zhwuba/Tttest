<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_bg" >
    
    <include 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_title_height"
        layout="@layout/discover_item_title"/>
    
    <ImageView
        android:id="@+id/topic_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_topic_big_height"
        android:scaleType="fitXY"
        android:layout_below="@id/title" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic_big"
        android:paddingLeft="@dimen/discover_topic_small_left"
        android:paddingRight="@dimen/discover_item_padding"
        android:paddingTop="@dimen/discover_topic_small_top"
        android:paddingBottom="@dimen/discover_topic_small_top" >
        
        <ImageView
            android:id="@+id/topic_1"
            android:layout_width="@dimen/discover_topic_small_size"
            android:layout_height="@dimen/discover_topic_small_size"
            android:layout_marginRight="@dimen/discover_item_padding"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/topic_2"
            android:layout_width="@dimen/discover_topic_small_size"
            android:layout_height="@dimen/discover_topic_small_size"
            android:layout_toRightOf="@id/topic_1"
            android:layout_marginRight="@dimen/discover_item_padding"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/topic_3"
            android:layout_width="@dimen/discover_topic_small_size"
            android:layout_height="@dimen/discover_topic_small_size"
            android:layout_toRightOf="@id/topic_2"
            android:layout_marginRight="@dimen/discover_item_padding"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/topic_3"
            android:layout_centerVertical="true"
            android:src="@drawable/more_topic" />
        
        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/novel_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    
</RelativeLayout>

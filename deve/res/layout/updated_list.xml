<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/app_image"
        android:layout_width="@dimen/common_app_icon_size"
        android:layout_height="@dimen/common_app_icon_size"
        android:layout_marginLeft="@dimen/onecolview_item_icon_margin"
   		android:layout_marginTop="@dimen/update_icon_margin_top"
   		android:layout_marginBottom="@dimen/update_icon_margin_top"
        android:src="@drawable/picture_bg1_big" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/relativelayout_id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/app_image"
        android:layout_marginLeft="@dimen/app_desc_top_margin"
        android:layout_marginRight="@dimen/update_btn_margin_right" >
        
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用名称"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/open_btn"
            android:textColor="@color/app_name_color"
	        android:textSize="@dimen/app_list_name_size" >
        </TextView>
        
        <TextView
            style="@style/common_install_btn_style"
            android:id="@id/open_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/open"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/version_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name"
            android:layout_toLeftOf="@id/open_btn"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="2.1 -> 2.2"
            android:textColor="@color/app_desc_color"
        	android:textSize="@dimen/common_app_gray_text_size" >
        </TextView>
        
        <LinearLayout
            android:id="@+id/linearlayout_id3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/version_change"
            android:orientation="horizontal" >

	        <TextView 
                android:id="@+id/list_fileSize_textView"
                android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
               	android:singleLine="true"
               	android:text="20M"
               	android:gravity="center"
            	android:textColor="@color/app_desc_color"
        		android:textSize="@dimen/common_app_gray_text_size"/>
	        
            <TextView 
                android:id="@+id/list_wifi_tip_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/update_wifi_up_notify"
                android:gravity="center"
                android:layout_marginLeft="4dip"
                android:visibility="gone"
                android:textColor="@color/common_home_color"
                android:textSize="@dimen/common_app_gray_text_size"/>	        
	        
        </LinearLayout>
    </RelativeLayout>
    
	<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_list_divider_margin"
        android:background="@color/common_bg"
        android:layout_below="@id/app_image" />

</RelativeLayout>
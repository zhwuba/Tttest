<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/category_b_item_min_height"
        android:layout_marginBottom="@dimen/category_b_item_space" >
    
	    <LinearLayout
	        android:id="@+id/level2"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/category_b_item_selector"
	        android:paddingLeft="@dimen/category_b_icon_margin_left"
	        android:paddingRight="@dimen/category_b_icon_margin_left"
	        android:clickable="true"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        android:orientation="vertical" >
	
	        <ImageView
	            android:id="@+id/level2_icon"
	            android:layout_width="@dimen/category_item_image_size"
	            android:layout_height="@dimen/category_item_image_size"
	            android:layout_gravity="center_horizontal" />
	
	        <TextView
	            style="@style/category_title_style"
	            android:id="@+id/level2_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/category_b_item_text_color"
	            android:layout_marginTop="@dimen/category_b_item_text_margin" />
	
	     </LinearLayout>
	
	     <!-- 分割线 -->
	
	     <View
	         android:layout_width="@dimen/category_shape_stroke_width"
	         android:layout_height="match_parent"
	         android:layout_marginTop="@dimen/category_b_item_space_margin"
	         android:layout_marginBottom="@dimen/category_b_item_space_margin"
	         android:background="@color/category_space_line" />
	 
	     <com.market.view.MyGridView 
	         android:id="@+id/level2_gridview"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_vertical"
	         android:layout_marginTop="@dimen/category_b_item_space_margin"
             android:layout_marginBottom="@dimen/category_b_item_space_margin"
             android:verticalSpacing="@dimen/category_b_layout_margin"
	         android:cacheColorHint="#00000000"
             android:fadingEdge="none"
             android:listSelector="#00000000"
	         android:numColumns="3">
	     </com.market.view.MyGridView>
    
     </LinearLayout>

</LinearLayout>
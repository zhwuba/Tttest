<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_category"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingLeft="@dimen/category_layout_margin"
    android:paddingRight="@dimen/category_layout_margin"
    android:orientation="vertical" >

    <TextView
        style="@style/category_title_style_default"
        android:layout_marginTop="@dimen/category_layout_margin"
        android:text="@string/hot_category" />

    <!-- 热门分类 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/hot_category_layout_height"
        android:background="@drawable/category_item_bg" >

        <LinearLayout
            android:id="@+id/item01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/category_item_selector"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon01"
                style="@style/hot_category_icon_style"/>

            <TextView
                android:id="@+id/name01"
                style="@style/hot_category_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/category_item_selector"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon02"
                style="@style/hot_category_icon_style"/>

            <TextView
                android:id="@+id/name02"
                style="@style/hot_category_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item03"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/category_item_selector"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon03"
                style="@style/hot_category_icon_style"/>

            <TextView
                android:id="@+id/name03"
                style="@style/hot_category_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item04"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/category_item_selector"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon04"
                style="@style/hot_category_icon_style"/>

            <TextView
                android:id="@+id/name04"
                style="@style/hot_category_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/category_title_name"
        style="@style/category_title_style_default"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_category"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        style="@style/category_title_style"
        android:text="@string/hot_category"
        android:layout_marginLeft="@dimen/category_title_p"
        android:layout_marginTop="@dimen/category_b_title_margin_top"
        android:layout_marginBottom="@dimen/category_b_title_margin_bottom" />

    <!-- 热门分类 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/category_b_hot_item_height">

        <LinearLayout
            android:id="@+id/item01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/category_a_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon01"
                android:layout_width="@dimen/category_b_hot_icon_size"
                android:layout_height="@dimen/category_b_hot_icon_size"
                android:layout_marginLeft="@dimen/category_title_margin"/>

            <TextView
                android:id="@+id/name01"
                style="@style/category_hot_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/category_b_layout_margin"/>
        </LinearLayout>

        <View 
            android:layout_width="@dimen/category_b_hot_item_space"
            android:layout_height="match_parent"/>
        
        <LinearLayout
            android:id="@+id/item02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/category_a_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon02"
                android:layout_width="@dimen/category_b_hot_icon_size"
                android:layout_height="@dimen/category_b_hot_icon_size"
                android:layout_marginLeft="@dimen/category_title_margin"/>

            <TextView
                android:id="@+id/name02"
                style="@style/category_hot_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/category_b_layout_margin"/>
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_b_hot_item_height"
        android:layout_marginTop="@dimen/category_b_hot_item_space">
    
        <LinearLayout
            android:id="@+id/item03"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/category_a_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon03"
                android:layout_width="@dimen/category_b_hot_icon_size"
                android:layout_height="@dimen/category_b_hot_icon_size"
                android:layout_marginLeft="@dimen/category_title_margin"/>

            <TextView
                android:id="@+id/name03"
                style="@style/category_hot_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/category_b_layout_margin"/>
        </LinearLayout>

        <View 
            android:layout_width="@dimen/category_b_hot_item_space"
            android:layout_height="match_parent"/>
        
        <LinearLayout
            android:id="@+id/item04"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/category_a_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon04"
                android:layout_width="@dimen/category_b_hot_icon_size"
                android:layout_height="@dimen/category_b_hot_icon_size"
                android:layout_marginLeft="@dimen/category_title_margin"/>

            <TextView
                android:id="@+id/name04"
                style="@style/category_hot_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/category_b_layout_margin"/>
        </LinearLayout>
    
    </LinearLayout>

    <TextView
        android:id="@+id/category_title_name"
        style="@style/category_title_style"
        android:layout_marginLeft="@dimen/category_title_p"
        android:layout_marginTop="@dimen/category_b_title_margin_top"
        android:layout_marginBottom="@dimen/category_b_title_margin_bottom"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    
    <View 
        android:id="@+id/left_view"
        android:layout_width="@dimen/common_margin"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"/>
    
    <RelativeLayout
        android:id="@+id/rlParent"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_toRightOf="@id/left_view"
	    android:layout_toLeftOf="@+id/right_view"
	    android:background="@drawable/common_item_bg">
	
	    <!-- icon -->
	    <ImageView
	        android:id="@+id/app_icon_img"
	        android:layout_width="@dimen/common_app_icon_size"
	        android:layout_height="@dimen/common_app_icon_size"
	        android:layout_marginLeft="@dimen/onecolview_item_icon_margin"
	        android:layout_marginTop="@dimen/onecolview_item_icon_margin"
	        android:layout_marginRight="@dimen/onecolview_item_name_margin_left" />
	
	    <!-- 安装按钮 -->
	    <TextView
	        style="@style/common_install_btn_style"
	        android:id="@+id/state_app_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="@dimen/onecolview_item_install_btn_margin"
	        android:duplicateParentState="false" />
	
	
	    <LinearLayout
	        android:id="@+id/name_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/onecolview_item_name_margin_top"
	        android:layout_toLeftOf="@id/state_app_btn"
	        android:layout_toRightOf="@+id/app_icon_img"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
		        android:id="@+id/text_sort"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/sort_text_size"
		        android:layout_marginRight="@dimen/onecolview_item_rank_margin"
		        android:gravity="center"
		        android:minHeight="@dimen/sort_text_size"
		        android:minWidth="@dimen/sort_text_size"
		        android:textColor="#ffffff"
		        android:textSize="@dimen/common_app_gray_text_size"
		        android:visibility="gone" />
	        
	        
	        <!-- 应用名 -->

	        <TextView
	            android:id="@+id/app_name_txt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ellipsize="end"
	            android:focusable="false"
	            android:maxWidth="@dimen/app_list_name_max_width"
	            android:singleLine="true"
	            android:textColor="@color/common_text_color"
	            android:textSize="@dimen/onecolview_item_name_size" />
	
	        <!-- 角标 -->
	        <ImageView
	            android:id="@+id/official_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/app_detail_offcial_margin_left" />
	
	        <ImageView
	            android:id="@+id/corner_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/app_detail_offcial_margin_left"/>
	
	        <!-- 排名变化 -->
	        <TextView
	            android:id="@+id/app_change_in_rank"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/fastrising_rank_change_margin_left"
	            android:drawableLeft="@drawable/rank_change_down"
	            android:drawablePadding="2dp"
	            android:gravity="center_vertical"
	            android:textSize="@dimen/fastrising_rank_change_text"
	            android:visibility="gone" />
	    </LinearLayout>
	
	    <RatingBar
	        android:id="@+id/app_ratingview"
	        style="@style/App_RatingBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/name_layout"
	        android:layout_toRightOf="@id/app_icon_img"
	        android:layout_marginTop="@dimen/onecolview_item_rate_star_margin"
	        android:layout_marginBottom="@dimen/onecolview_item_rate_star_margin_bottom"
	        android:background="@null"
	        android:isIndicator="true"
	        android:numStars="5" />
	
	    <TextView
	        android:id="@+id/download_times_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/app_ratingview"
	        android:layout_toRightOf="@id/app_icon_img"
	        android:textColor="@color/home_app_size_color"
	        android:textSize="@dimen/common_app_gray_text_size" />
	
	    <ImageView
	        android:id="@+id/download_divider"
	        android:layout_width="@dimen/divider_width"
	        android:layout_height="@dimen/app_divide_height"
	        android:layout_below="@id/app_ratingview"
	        android:layout_marginLeft="@dimen/common_icon_left_margin"
	        android:layout_marginTop="@dimen/app_divide_margin_top"
	        android:layout_toRightOf="@id/download_times_txt"
	        android:background="@color/app_desc_color"
	        android:paddingBottom="@dimen/common_icon_top_margin"
	        android:paddingTop="@dimen/app_divide_margin_top" />
	
	    <TextView
	        android:id="@+id/app_size_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/app_ratingview"
	        android:layout_marginLeft="@dimen/common_icon_left_margin"
	        android:layout_toLeftOf="@id/state_app_btn"
	        android:layout_toRightOf="@id/download_divider"
	        android:textColor="@color/home_app_size_color"
	        android:textSize="@dimen/common_app_gray_text_size" />
	
	    <!-- 下方描述 -->
	    <TextView
	        android:id="@+id/app_desc"
	        android:layout_width="@dimen/app_desc_width"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/app_icon_img"
	        android:layout_marginLeft="@dimen/onecolview_item_icon_margin"
	        android:layout_marginTop="@dimen/onecolview_item_desc_margin"
	        android:paddingBottom="@dimen/onecolview_item_icon_margin"
	        android:ellipsize="end"
	        android:singleLine="true"
	        android:textColor="@color/home_app_size_color"
	        android:textSize="@dimen/common_app_gray_text_size" />
	
	
	</RelativeLayout>
    
    <View 
        android:id="@+id/right_view"
        android:layout_width="@dimen/common_margin"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"/>
    
    <View 
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_app_divider_height"
        android:layout_below="@id/rlParent"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/discover_app_padding"
    android:paddingLeft="@dimen/discover_app_padding"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:background="@drawable/category_b_item_selector"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/app_img"
        android:layout_width="@dimen/common_app_icon_size"
        android:layout_height="@dimen/common_app_icon_size" />
    
    <TextView 
        android:id="@+id/app_name"
        android:layout_width="@dimen/common_app_icon_size"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_img"
        android:gravity="center"
        android:textColor="@color/home_app_name_color"
        android:textSize="@dimen/app_list_name_size"
        android:layout_marginTop="@dimen/discover_app_text_top"
        android:singleLine="true"
        android:ellipsize="end"/>
    
    <TextView
        style="@style/common_install_btn_style"
        android:id="@+id/state_app_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:duplicateParentState="false"
        android:layout_marginTop="@dimen/discover_app_install_top" />
    
    <ImageView
        android:id="@+id/app_corner"
        android:layout_width="@dimen/home_corner_icno_size"
        android:layout_height="@dimen/home_corner_icno_size"
        android:layout_alignLeft="@id/app_img"
        android:layout_alignTop="@id/app_img"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.market.view.AnimLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anim_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@color/white"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/move_list_view"
            style="@style/common_scroll_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onekey_install_move_heigh"
            android:cacheColorHint="#00000000"
            android:layout_marginTop="@dimen/necessary_dialog_list_margin_top"
            android:divider="@null"
            android:fadingEdge="none"
            android:listSelector="#00000000" >
        </ListView>

        <LinearLayout
            android:id="@+id/move_bottom_layout"
            android:layout_width="match_parent"
            android:background="@color/common_bg"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/move_text_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/move_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/installed_necessary_move_text1"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/necessary_dialog_bottom_text_size" />

                <TextView
                    android:id="@+id/move_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/common_subtitle_bg"
                    android:textSize="@dimen/necessary_dialog_bottom_text_size" />

                <TextView
                    android:id="@+id/move_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/installed_necessary_move_text2"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/necessary_dialog_bottom_text_size" />

                <TextView
                    android:id="@+id/move_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 MB"
                    android:textColor="@color/common_subtitle_bg"
                    android:textSize="@dimen/necessary_dialog_bottom_text_size" />
            </LinearLayout>

            <Button
                android:id="@+id/move_button"
                android:layout_width="@dimen/necessary_dialog_bottom_btn_width"
                android:layout_height="@dimen/necessary_dialog_bottom_btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/necessary_dialog_bottom_btn_margin"
                android:layout_marginTop="@dimen/necessary_dialog_bottom_btn_margin"
                android:background="@drawable/common_install_btn"
                android:text="@string/one_key_install3"
                android:textColor="@drawable/btn_base_text_color"
                android:textSize="@dimen/necessary_dialog_bottom_btn_text_size" />
        </LinearLayout>
    </LinearLayout>

</com.market.view.AnimLayout>
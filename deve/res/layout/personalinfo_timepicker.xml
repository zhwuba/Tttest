<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/personalinfo_dialog_bg"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/timeerror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/personalInfo_birthday_ser_error"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <com.widget.time.WheelView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.widget.time.WheelView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.widget.time.WheelView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.widget.time.WheelView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.widget.time.WheelView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:background="@drawable/line" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/personalinfo_dialog_item_height"
        >
        
        <Button 
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_btn_left_bg"
            android:text="@string/dialog_cancel"
            android:textColor="@color/personalinfo_tip_color"/>
        
        <View 
            android:layout_width="@dimen/common_divider_height"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line"/>
        
        <Button 
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_btn_right_bg"
            android:textColor="@color/common_green_color"
            android:text="@string/dialog_ok"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/grid_item_height"
    android:background="@drawable/hotwords_bg_selector"
    android:padding="@dimen/icno_padding">

    <ImageView 
        android:id="@+id/icon"
        android:layout_width="@dimen/hoticon_size"
        android:layout_height="@dimen/hoticon_size"
        android:layout_marginRight="@dimen/icno_padding"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    
    <TextView
        android:id="@+id/hotword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@id/icon"
        android:layout_centerInParent="true"
        android:textSize="@dimen/hotword_size"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/app_image"
        android:layout_width="@dimen/common_app_icon_size"
        android:layout_height="@dimen/common_app_icon_size" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="@dimen/app_detail_recomment_icon_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#383838" />

     <TextView
        android:id="@+id/app_download_percent"
        android:layout_width="@dimen/install_download_width"
        android:layout_height="@dimen/install_button_height"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/detail_show_left_text"
        android:textSize="@dimen/install_button_text_size" />
    
    
    <TextView
        style="@style/common_install_btn_style"
        android:id="@+id/install_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Dialog_Translucent" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Translucent" parent="@android:style/Theme.Translucent">
        <item name="android:colorForeground">#ffffffff</item>
        <item name="android:windowBackground">@drawable/translucent_background</item>
    </style>

    <style name="padding5">
        <item name="android:paddingLeft">18dip</item>
        <item name="android:paddingRight">18dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="progressBar_activity_wait">
        <item name="android:layout_width">15.0dip</item>
        <item name="android:layout_height">15.0dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading_intern</item>
        <item name="android:progressDrawable">@drawable/progress_loading_intern</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    <style name="progress_dialog_wait">
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">20.0dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading_intern</item>
        <item name="android:progressDrawable">@drawable/progress_loading_intern</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    <style name="progressBar_launch_wait">
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">20.0dip</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/launch_progress_loading_intern</item>
        <item name="android:progressDrawable">@drawable/launch_progress_loading_intern</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    <style name="RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:baselineAlignBottom">true</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_comment</item>
        <item name="android:thumb">@null</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1.0</item>
    </style>
    <style name="RatingBar.Custom_RatingBar" parent="@style/RatingBar">
        <item name="android:minHeight">@dimen/ratingbar_small_minHeight</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:progressDrawable">@drawable/ratingbar_big</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="App_RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/ratingbar_small_minHeight</item>
        <item name="android:minHeight">@dimen/ratingbar_small_minHeight</item>
        <item name="android:baselineAlignBottom">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_big</item>
        <item name="android:thumb">@null</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1.0</item>
        <item name="android:isIndicator">true</item>
    </style>
    
    <style name="MyMarketDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/transparent_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="SignCheckDialog" parent="@style/MyMarketDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    
    <style name="SignInDialog">
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>  
        <item name="android:backgroundDimEnabled">true</item> 
        <item name="android:background">@drawable/signin_report_bg</item>
    </style>
    
    <style name="SignInDialog_text">
        <item name="android:textSize">@dimen/signin_dialog_text_size</item>
        <item name="android:textColor">#9c9c9c</item>
        <item name="android:layout_marginTop">@dimen/signin_dialog_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/signin_dialog_text_margin</item>
    </style>

    <style name="transparent_style" parent="@android:Theme.Black.NoTitleBar">
		<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>  
     <style name="dialog_transparent_style" parent="@android:Theme.Black.NoTitleBar">
         <item name="android:windowBackground">@drawable/translucent_background</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>  
    
     <!-- 分类样式A/B(热门分类名样式) -->
     <style name="category_hot_text_style">
         <item name="android:textSize">@dimen/category_hot_text_size</item>
         <item name="android:textColor">@color/category_hot_text_color</item>
         <item name="android:singleLine">true</item>
         <item name="android:ellipsize">end</item>
     </style>
     
     <!-- 分类样式A(热门分类名样式) -->
     <style name="category_a_hot_text_style" parent="category_hot_text_style">
         <item name="android:paddingTop">@dimen/category_a_hot_text_padding</item>
         <item name="android:paddingBottom">@dimen/category_a_title_margin_bottom</item>
     </style>
     
     <!-- 分类样式A(热门分类图片样式) -->
     <style name="category_a_hot_icon_style">
         <item name="android:layout_width">@dimen/category_a_hot_icon_size</item>
         <item name="android:layout_height">@dimen/category_a_hot_icon_size</item>
     </style>
     
     <!-- 分类样式A/B(分类标题样式) -->
     <style name="category_title_style">
         <item name="android:textSize">@dimen/category_title_size</item>
         <item name="android:textColor">@color/category_title_color</item>
         <item name="android:gravity">center_vertical</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:singleLine">true</item>
         <item name="android:ellipsize">end</item>
     </style>
     
     <style name="category_title_style_default">
         <item name="android:textSize">12sp</item>
         <item name="android:textColor">#888</item>
         <item name="android:layout_marginLeft">3dp</item>
         <item name="android:gravity">center_vertical</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">@dimen/category_title_height</item>
     </style>
     
     <!-- 分类样式A(热门分类单个布局样式) -->
     <style name="category_a_hot_view_style">
         <item name="android:background">@drawable/category_a_item_selector</item>
         <item name="android:gravity">center</item>
         <item name="android:clickable">true</item>
         <item name="android:orientation">vertical</item>
         <item name="android:paddingTop">@dimen/category_a_title_margin_bottom</item>
         <item name="android:minHeight">@dimen/category_a_layout_h</item>
     </style>
     <!-- JLu added for Category end-->
     
     <style name="hot_category_icon_style">
         <item name="android:layout_marginTop">@dimen/hot_category_icon_margin_top</item>
         <item name="android:layout_marginBottom">@dimen/hot_category_icon_margin_bottom</item>
         <item name="android:layout_width">@dimen/hot_category_icno_size</item>
         <item name="android:layout_height">@dimen/hot_category_icno_size</item>
     </style>
     
     <style name="hot_category_text_style">
         <item name="android:textSize">@dimen/hot_category_text_size</item>
         <item name="android:textColor">@color/category_hot_text_color</item>
     </style>
     
     <style name="category_item_text_style">
         <item name="android:textSize">@dimen/category_item_text_size</item>
         <item name="android:textColor">@color/category_hot_text_color</item>
         <item name="android:gravity">center</item>
         <item name="android:width">@dimen/category_item_text_width</item>
         <item name="android:height">@dimen/category_item_text_height</item>
     </style>
     
     <style name="common_scroll_style">
         <item name="android:scrollbarSize">4dp</item>
         <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
         <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_vertical_thumb</item>
         <item name="android:scrollbarStyle">outsideOverlay</item>
     </style>
     
    <style name="NotificationText" parent="@android:style/TextAppearance.StatusBar.EventContent" />

    <style name="NotificationTitle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />
    
	<style name="common_install_btn_style">
	    <item name="android:width">@dimen/common_app_install_width</item>
	    <item name="android:height">@dimen/common_app_install_height</item>
	    <item name="android:background">@drawable/common_install_btn</item>
	    <item name="android:gravity">center</item>
	    <item name="android:text">@string/install</item>
	    <item name="android:textColor">@color/common_app_install_color</item>
	    <item name="android:textSize">@dimen/common_app_install_size</item>
	</style>
	
	<style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
    </style>

    <style name="AuthorLoginStyle" parent="@android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    
</resources>
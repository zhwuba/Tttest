<?xml version="1.0" encoding="utf-8"?>
<!-- modified by daichengyuan 20130914 for change progresbar style-->
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background" android:drawable="@drawable/probar_background" />
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />
                <gradient android:startColor="#ff000000" android:endColor="#ffffffff" android:angle="270.0" android:centerY="0.75" android:centerColor="#ffffA500" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />
                <gradient android:startColor="#ffff0000" android:endColor="#ff00ff00" android:angle="45" android:centerY="0.75" android:centerColor="#ffffA500" />
            </shape>
        </clip>
    </item>
</layer-list>

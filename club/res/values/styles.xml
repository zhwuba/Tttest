<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowBackground">@drawable/dialog_bg</item> -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Light" parent="@android:Theme.Holo.Light">
        <item name="android:expandableListPreferredItemPaddingLeft">35.0dip</item>
        <item name="android:expandableListViewStyle">@style/Widget.Holo.Light.ExpandableListView</item>
        <item name="android:expandableListViewWhiteStyle">@style/Widget.Holo.Light.ExpandableListView.White</item>
        <!-- item name="android:actionBarStyle">@style/Widget.Holo.Light.ActionBar.Solid.HomeUp</item -->
        <item name="android:actionBarTabTextStyle">@style/Widget.Holo.Light.ActionBar.TabText</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Holo.Light.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ab_home_up</item>
    </style>

    <style name="Theme.Resource.Theme.List" parent="@style/Theme.Light">

        <!-- item name="android:actionBarStyle">@style/Theme.Resource.ActionBar.Style.List</item -->
        <item name="android:actionBarSize">@dimen/two_floors_action_bar_height</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.ActionBar.Menu.NoAllCaps</item>
        <item name="android:actionBarSplitStyle">?android:attr/actionBarStyle</item>
    </style>

    <!-- widget -->
    <style name="Theme.Resource.ActionBar.Style.List" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">

        <!-- item name="android:title">@string/theme_component_title_others</item -->
        <item name="android:logo">@drawable/action_bar_logo</item>
    </style>

    <style name="Widget.Holo.Light.ActionBar.Solid.HomeUp" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:logo">@drawable/ab_home_up_divider</item>
        <item name="android:displayOptions">useLogo|showHome|homeAsUp|showTitle</item>
    </style>

    <style name="Widget.Holo.Light.ActionBar.TabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textColor">@color/primary_tab_text</item>
        <item name="android:textAllCaps">false</item>
        <!-- XXX -->
    </style>

    <style name="Widget.Holo.Light.ActionButton.Overflow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_holo_light</item>
    </style>

    <style name="Widget.Holo.Light.ExpandableListView" parent="@android:style/Widget.Holo.Light.ExpandableListView">
        <item name="android:groupIndicator">@drawable/expander_group_holo_light</item>
        <item name="android:indicatorLeft">16.0dip</item>
    </style>

    <style name="Widget.Holo.Light.ExpandableListView.White" parent="@style/Widget.Holo.Light.ExpandableListView" />

    <style name="WallpaperMenuPopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/wallpaper_menu_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/wallpaper_menu_popup_fade_out</item>
    </style>

    <style name="Theme.Resource.Theme.Wallpaper" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearance.ActionBar.Menu.NoAllCaps" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <!-- XXX -->
    </style>

    <!-- resource -->
    <style name="ResourceBrowser">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResourceBrowser.ListItem" parent="@style/ResourceBrowser">
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="ResourceBrowser.ResourceImage" parent="@style/ResourceBrowser">
        <item name="android:background">@drawable/resource_thumbnail_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ResourceBrowser.ResourceProperty" parent="@style/ResourceBrowser">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ResourceBrowser.ResourceProperty.Title" parent="@style/ResourceBrowser.ResourceProperty">
        <item name="android:gravity">right</item>
        <item name="android:layout_weight">2.0</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ResourceBrowser.ResourceProperty.Content" parent="@style/ResourceBrowser.ResourceProperty">
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_weight">3.0</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text_Tab_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_tab_text</item>
        <item name="android:clickable">true</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="progressBar_activity_wait">
        <item name="android:layout_width">@dimen/loading_progress</item>
        <item name="android:layout_height">@dimen/loading_progress</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    <!-- added by daichengyuan at 20130914 for firstpage style at viewPager -->
    <style name="firstpager_layout_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="firstpager_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="WallpaperTitle">
        <item name="android:textSize">20dip</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowRadius">2.5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Preview" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <style name="LivePickerTheme" parent="android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppBaseTheme2" parent="AppBaseTheme">
        <item name="@*android:actionBarBottomTabTextStyle">@style/actionBarBottomTabTextStyle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- useLogo和showHome都是图标,showTitle是标题 -->
    <style name="ActionBarStyle.Default" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@color/custom_top_color</item>
    </style>

    <style name="actionBarBottomTabTextStyle" parent="@*android:Widget.Holo.Light.ActionBar.BottomTabText">
        <item name="android:textColor">@drawable/bottomtab_indicator_text</item>
    </style>

    <style name="WidgetTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/WidgetActionBarStyle</item>
    </style>

    <style name="WidgetActionBarStyle" parent="@android:Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions"></item>
    </style>

    <style name="DialogActivity" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
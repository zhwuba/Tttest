<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/preview_thumb_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thumb_preview_h"
        android:scaleType="fitXY"
        android:background="@drawable/wallpaper_no_default2"/>  
    
	<ImageView 
	    android:id="@+id/thumb_status_iv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@id/preview_thumb_item"
	    android:layout_alignRight="@id/preview_thumb_item"
	    android:src="@drawable/status_downloaded"
	    android:visibility="gone"/>
    
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.freeme.themeclub"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black" >

    <com.freeme.themeclub.wallpaper.view.WallpaperView
        android:id="@+id/wallpaperView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/previewMask"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/titleArea"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@drawable/background"
        android:gravity="center"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/homeAsUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wallpaper_detail_navigator" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"
            android:textColor="#ffffff" />
        
        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"
            android:textColor="#ffffff" />

        <ImageView
                    android:id="@+id/infoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wallpaper_detail_info_btn" />
        <!-- <ImageView
            android:id="@+id/navPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wallpaper_nav_previous" />

        <ImageView
            android:id="@+id/navNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wallpaper_nav_next" /> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/operatorArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical" >

        <com.freeme.themeclub.wallpaper.view.HorzontalSliderView
            android:id="@+id/slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wallpaper_slider_bg"
            settings:src="@drawable/wallpaper_slider" 
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/operationBar"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:background="@drawable/background" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/share_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/share_wallpaper" 
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/downloadButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/tab_button_big"
                        android:gravity="center" 
                        android:textColor="#ffffff"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tab_delete2" />  
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
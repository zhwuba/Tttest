<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ascv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.freeme.themeclub.NavigationControlView
        android:id="@+id/navigationInner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        ascv:ascv_defaultSelection="0"
        ascv:ascv_items="@array/theme_option"
        ascv:ascv_selectedTextColor="@color/attr_selected_text_color"
        ascv:ascv_stretch="true"
        ascv:ascv_unselectedTextColor="@color/attr_unselected_text_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/inner_viewpager_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigationInner" >
    </android.support.v4.view.ViewPager>

    <include layout="@layout/empty_data" />

</RelativeLayout>
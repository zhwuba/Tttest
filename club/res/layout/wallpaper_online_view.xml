<?xml version="1.0" encoding="utf-8"?>
<com.freeme.themeclub.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_background_color" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >

        <include
            android:id="@+id/adver"
            layout="@layout/layout_adver" />

        <com.freeme.themeclub.MyGridView
            android:id="@+id/preview_thumb_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/adver"
            android:layout_marginTop="@dimen/gridview_margin_top"
            android:gravity="center"
            android:horizontalSpacing="@dimen/gridview_horizontal_spacing"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:paddingLeft="@dimen/gridview_padding"
            android:paddingRight="@dimen/gridview_padding"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/wallpaper_gridview_vertical_spacing" />

        <LinearLayout
            android:id="@+id/grid_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateBehavior="repeat" />
        </LinearLayout>
    </RelativeLayout>

</com.freeme.themeclub.MyScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.freeme.themeclub.MyScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <include
                android:id="@+id/loadinglayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                layout="@layout/progress_bar_intern"
                android:visibility="gone" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                layout="@layout/error"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.5dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/themename_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#36382b"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/designer"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/producers_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/size_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="#787d7a" />

                    <TextView
                        android:id="@+id/download_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/download_times"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/particular_info_detail_scrollview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <com.freeme.themeclub.theme.onlinetheme.PreviewGallery
                    android:id="@+id/particular_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:orientation="vertical"
                    android:paddingTop="12dp" >

                    <!-- android:layout_marginLeft="12.5dp" -->

                    <android.support.v4.view.ViewPager
                        android:id="@+id/preview_view_pager"
                        android:layout_width="@dimen/detail_preview_w"
                        android:layout_height="@dimen/detail_preview_h"
                        android:layout_gravity="center"
                        android:clipChildren="false"
                        android:flipInterval="30"
                        android:persistentDrawingCache="animation" />

                    <com.freeme.themeclub.theme.onlinetheme.PageIndicator
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/preview_page_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="13dp"
                        android:focusable="false"
                        android:gravity="center|top" >
                    </com.freeme.themeclub.theme.onlinetheme.PageIndicator>
                    <!--
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />
                    -->
                </com.freeme.themeclub.theme.onlinetheme.PreviewGallery>

                <LinearLayout
                    android:id="@+id/installing_hint"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/download_bar_h"
                    android:layout_alignBottom="@+id/particular_info"
                    android:background="#8f8f8f"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/installing"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_intro"
                    android:textColor="#a2afb4"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:background="#c5d4da" />

                <TextView
                    android:id="@+id/res_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="#a2afb4"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/you_like"
                    android:textColor="#a2afb4"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:background="#c5d4da" />

                <com.freeme.themeclub.MyGridView
                    android:id="@+id/theme_grid_youlike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:horizontalSpacing="7.5dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="3"
                    android:scrollbarStyle="outsideOverlay"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="5dp" />
            </LinearLayout>
        </LinearLayout>
    </com.freeme.themeclub.MyScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"   
        android:background="@color/custom_bottom_color" >

        <ImageView
            android:id="@+id/share_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/tab_share" />

        <ImageView
            android:id="@+id/delete_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tab_delete" />

        <ProgressBar
            android:id="@+id/progressbar_id"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="194dp"
            android:layout_height="40dip"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/progress_horizontal"
            android:visibility="gone" >
        </ProgressBar>

        <Button
            android:id="@+id/download_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_button_big"
            android:gravity="center"
            android:text="@string/download"
            android:textColor="#ffffff" 
            android:textSize="16.7sp"/>

        <Button
            android:id="@+id/apply_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_button_big"
            android:gravity="center"
            android:text="@string/apply"
            android:textColor="#ffffff"
            android:visibility="gone" 
            android:textSize="16.7sp"/>

        <Button
            android:id="@+id/in_use_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_button_big"
            android:gravity="center"
            android:text="@string/in_use"
            android:textColor="#ffffff"
            android:visibility="gone" 
            android:textSize="16.7sp"/>

        <!--
             <Button
            android:id="@+id/cancel_txt"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_button_cancel"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#000000"
            android:visibility="gone" />
        -->

        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/cancel"
            android:visibility="gone" 
            android:textColor="#ffffff"
            android:textSize="16.7sp"/>
    </RelativeLayout>

</LinearLayout>
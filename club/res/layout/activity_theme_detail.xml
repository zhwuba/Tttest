<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/loadinglayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                layout="@layout/progress_bar_intern"
                android:visibility="gone" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                layout="@layout/error"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.5dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/themename_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#36382b"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/designer"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/producers_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/size_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />
<!-- 
                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="#787d7a" />

                    <TextView
                        android:id="@+id/download_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#787d7a"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/download_times"
                        android:textColor="#787d7a"
                        android:textSize="14sp" /> -->
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/particular_info_detail_scrollview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <com.freeme.themeclub.theme.onlinetheme.PreviewGallery
                    android:id="@+id/particular_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:orientation="vertical"
                    android:paddingTop="12dp" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/preview_view_pager"
                        android:layout_width="@dimen/detail_preview_w"
                        android:layout_height="@dimen/detail_preview_h"
                        android:layout_marginLeft="12.5dp"
                        android:clipChildren="false"
                        android:flipInterval="30"
                        android:persistentDrawingCache="animation" />

                    <com.freeme.themeclub.theme.onlinetheme.PageIndicator
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/preview_page_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="13dp"
                        android:focusable="false"
                        android:gravity="center|top" >
                    </com.freeme.themeclub.theme.onlinetheme.PageIndicator>
 
                </com.freeme.themeclub.theme.onlinetheme.PreviewGallery>

                <LinearLayout
                    android:id="@+id/installing_hint"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/download_bar_h"
                    android:layout_alignBottom="@+id/particular_info"
                    android:background="#8f8f8f"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/installing"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_intro"
                    android:textColor="#a2afb4"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:background="#c5d4da" />

                <TextView
                    android:id="@+id/res_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a2afb4"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/custom_bottom_color" >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="#dcdcdc"/>

        <ImageView
            android:id="@+id/share_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/tab_share" />

        <ImageView
            android:id="@+id/delete_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/tab_delete" />

        <Button
            android:id="@+id/apply_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_button_big"
            android:gravity="center"
            android:text="@string/apply" 
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/in_use_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_button_big"
            android:gravity="center"
            android:text="@string/in_use"
            android:visibility="gone" 
            android:textColor="#ffffff"/>
    </RelativeLayout>

</LinearLayout>